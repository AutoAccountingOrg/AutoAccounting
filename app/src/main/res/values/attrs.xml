<resources>
    <declare-styleable name="WaveTextView">
        <attr name="waveColor" format="color" />
        <attr name="waveAmplitude" format="dimension" />
        <attr name="waveFrequency" format="float" />
        <!-- 保留自定义属性，避免与依赖库重复定义冲突：移除 waveSpeed -->
        <attr name="waveBottomPadding" format="float" />
    </declare-styleable>
    <declare-styleable name="IconView">
        <attr name="iconSrc" format="reference" />
        <attr name="iconTintEnabled" format="boolean" />
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="iconSize" format="dimension" />
        <attr name="maxLines" format="integer" />
    </declare-styleable>
    <declare-styleable name="StatusPage">
        <attr name="innerHeight" format="string" />
    </declare-styleable>
    <declare-styleable name="SettingItemView">
        <attr name="settingIcon" format="reference" />
        <attr name="settingTitle" format="string" />
        <attr name="settingDesc" format="string" />
    </declare-styleable>
    <declare-styleable name="GradientImageView">
        <attr name="cornerRadiusTopLeft" format="dimension" />
        <attr name="cornerRadiusTopRight" format="dimension" />
        <attr name="cornerRadiusBottomLeft" format="dimension" />
        <attr name="cornerRadiusBottomRight" format="dimension" />
        <attr name="cornerRadius" format="dimension" />
    </declare-styleable>
    <declare-styleable name="ExpandableCardView">
        <!-- icon drawable -->
        <attr name="ecv_icon" format="reference" />
        <!-- 标题文字 -->
        <attr name="ecv_titleText" format="string" />
        <!-- 描述文字 -->
        <attr name="ecv_descriptionText" format="string" />
        <!-- 是否默认展开 -->
        <attr name="ecv_expanded" format="boolean" />
        <attr name="ecv_switch" format="boolean" />
    </declare-styleable>
    <declare-styleable name="IconTileView">
        <attr name="tileIcon" format="reference" />
        <attr name="tileLabel" format="string" />
        <attr name="circleColor" format="color" />
    </declare-styleable>

</resources>