<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/status_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    style="@style/HomeCard"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:id="@+id/card_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/colorPrimaryContainer"
        android:clickable="true"
        android:padding="@dimen/cardPadding">

        <!-- 上半部分：图标 + 文字信息，水平排列并垂直居中 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 图标 -->
            <ImageView
                android:id="@+id/icon_view"
                android:layout_width="@dimen/image_size_small"
                android:layout_height="@dimen/image_size_small"
                android:layout_marginEnd="@dimen/padding"
                android:src="@drawable/home_active_success"
                app:tint="?colorOnPrimaryContainer" />

            <!-- 右侧文字区域：垂直排列四行文本 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <!-- 第一行：工作状态 + 模式标签，水平排列 -->
                <LinearLayout
                    android:padding="@dimen/mini_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- 工作状态文本 -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/title_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="?colorOnPrimaryContainer"
                        android:layout_marginEnd="@dimen/one_padding"
                        tools:text="工作中" />

                    <!-- 模式标签：小圆角背景 -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/mode_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                        android:textColor="?colorOnPrimary"
                        android:background="@drawable/bg_mode_tag"
                        android:paddingHorizontal="@dimen/one_padding"
                        android:paddingVertical="@dimen/mini_padding"
                        tools:text="Xposed" />

                </LinearLayout>

                <!-- 第二行：App 版本 -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/subtitle_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/mini_padding"
                    android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                    android:textColor="?colorOnPrimaryContainer"
                    tools:text="App：v1.2.3" />

                <!-- 第三行：规则版本 -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/rule_version_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/mini_padding"
                    android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                    android:textColor="?colorOnPrimaryContainer"
                    tools:text="规则：v0.0.0" />

                <!-- 第四行：规则更新时间 -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/rule_update_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/mini_padding"
                    android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                    android:textColor="?colorOnPrimaryContainer"
                    tools:text="更新：2025-01-01" />

            </LinearLayout>

        </LinearLayout>

        <!-- 下半部分：右下角按钮区域 -->

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
