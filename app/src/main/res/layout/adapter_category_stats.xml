<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding"
    android:paddingTop="@dimen/half_padding"
    android:paddingEnd="@dimen/padding"
    android:paddingBottom="@dimen/half_padding">

    <!-- 文字信息行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 缩进视图（用于子分类） -->
        <View
            android:id="@+id/indent_view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:visibility="gone" />

        <!-- 分类图标 + 展开/收起（合并为组件） -->
        <net.ankio.auto.ui.components.CategoryIconMoreView
            android:id="@+id/category_icon_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/half_padding"
            app:cim_icon="@drawable/default_cate" />

        <!-- 分类名称 -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/category_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:text="@string/title_category" />

        <!-- 百分比 -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/category_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:text="0.0%" />

    </LinearLayout>

    <!-- 进度条 -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="4dp"
        android:progressDrawable="@drawable/progress_bar_drawable"
        android:progress="0"
        android:max="100" />

</LinearLayout>
