<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/padding"
    android:layout_marginEnd="@dimen/padding"
    android:layout_marginBottom="@dimen/padding"
    app:cardBackgroundColor="?attr/colorSurfaceContainer"
    app:cardCornerRadius="@dimen/radius"
    app:cardElevation="0dp"
    style="?attr/materialCardViewElevatedStyle"
    android:id="@+id/groupCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding">

        <!-- 时间 -->
        <net.ankio.auto.ui.components.IconView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconSrc="@drawable/float_time"
            app:iconTintEnabled="true"
            app:textColor="?colorOnBackground"
            tools:text="2025-06-22 09:03:57"
            android:layout_gravity="start" />

        <!-- 内容 -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Body2"
            android:maxLines="3"
            android:ellipsize="end"
            android:paddingTop="@dimen/one_padding"
            android:paddingBottom="@dimen/one_padding"
            android:textColor="?colorOnSurface"
            android:text="这是一个规则内容xxx这是一个规则内容xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" />

        <!-- 规则名称行 -->
        <net.ankio.auto.ui.components.IconView
            android:id="@+id/ruleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one_padding"
            android:textColor="?colorOnSurface"
            app:textColor="?colorOnSurface"
            app:iconSrc="@drawable/home_rule"
            app:iconTintEnabled="true"
            tools:text="规则名示例" />

        <!-- 操作按钮组 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one_padding"
            android:gravity="end|center_vertical">

            <com.google.android.material.button.MaterialButtonGroup
                android:id="@+id/buttonGroup"
                style="@style/Widget.Material3.MaterialButtonGroup.Connected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:selectionRequired="false"
                app:singleSelection="false">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/createRule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?attr/materialButtonTonalStyle"
                    android:paddingStart="@dimen/padding"
                    android:paddingEnd="@dimen/padding"
                    app:icon="@drawable/icon_edit"
                    android:text="@string/btn_create_rule"
                    app:iconGravity="textStart"
                    app:iconPadding="1dp"
                    android:textSize="11sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:minWidth="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/uploadData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?attr/materialButtonTonalStyle"
                    android:paddingStart="@dimen/padding"
                    android:paddingEnd="@dimen/padding"
                    app:icon="@drawable/icon_upload"
                    android:text="@string/btn_upload_adapter"
                    app:iconGravity="textStart"
                    app:iconPadding="1dp"
                    android:textSize="11sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:minWidth="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/testRule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?attr/materialButtonTonalStyle"
                    android:paddingStart="@dimen/padding"
                    android:paddingEnd="@dimen/padding"
                    app:icon="@drawable/icon_test"
                    android:text="@string/btn_test_rule"
                    app:iconGravity="textStart"
                    app:iconPadding="1dp"
                    android:textSize="11sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:minWidth="0dp" />

            </com.google.android.material.button.MaterialButtonGroup>

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
