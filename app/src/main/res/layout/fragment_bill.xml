<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        app:liftOnScroll="true"
        android:fitsSystemWindows="true"
        app:liftOnScrollTargetViewId="@id/content_view">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"

            app:menu="@menu/bill_menu"
            app:title="@string/title_bill" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 主内容区域 - 使用 LinearLayout 包装 ChipGroup 和 SwipeRefreshLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- 筛选区域：月份 + 同步状态（输入框样式） -->
        <LinearLayout
            android:id="@+id/filterContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp">

            <com.google.android.material.button.MaterialSplitButton
                android:id="@+id/input_month_split_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:contentDescription="@string/date">

                <com.google.android.material.button.MaterialButton
                    style="?attr/materialSplitButtonLeadingFilledTonalStyle"
                    android:id="@+id/input_month_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    tools:text="2025 - 09"
                    app:icon="@drawable/ic_date_range" />

                <com.google.android.material.button.MaterialButton
                    style="?attr/materialSplitButtonLeadingFilledTonalStyle"
                    android:id="@+id/input_month_chevron"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/date"
                    app:iconSize="18dp"
                    app:icon="@drawable/m3_split_button_chevron_avd" />
            </com.google.android.material.button.MaterialSplitButton>

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <com.google.android.material.button.MaterialSplitButton
                android:gravity="center_horizontal"
                android:id="@+id/input_status_split_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/filter_type_all">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/input_status_button"
                    style="?attr/materialSplitButtonLeadingFilledTonalStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_type_all"
                    app:icon="@drawable/data_filter" />

                <com.google.android.material.button.MaterialButton
                    style="?attr/materialSplitButtonLeadingFilledTonalStyle"
                    android:id="@+id/input_status_chevron"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/filter_type_all"
                    app:iconSize="18dp"
                    app:icon="@drawable/m3_split_button_chevron_avd" />
            </com.google.android.material.button.MaterialSplitButton>

        </LinearLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <net.ankio.auto.ui.components.StatusPage
                android:id="@+id/status_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>