<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:liftOnScroll="true"
        app:liftOnScrollTargetViewId="@id/content_view">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:menu="@menu/setting_menu"
            style="@style/Widget.Material3.Toolbar"
            app:title="@string/title_setting" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding">

            <!-- 高级版信息卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/pro_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding"
                app:cardCornerRadius="@dimen/radius"
                app:strokeWidth="0dp">

                <!-- 渐变背景层：BreathingGradientView 本身就是 FrameLayout，无需额外包裹 -->
                <net.ankio.auto.ui.components.BreathingGradientView
                    android:id="@+id/pro_gradient_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- 内容区域：简化布局，仅保留图标、标题和激活信息 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/pro_card_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?colorPrimaryContainer"
                        android:padding="24dp">

                        <!-- 图标 -->
                        <ImageView
                            android:id="@+id/pro_icon"
                            android:layout_width="@dimen/image_size"
                            android:layout_height="@dimen/image_size"
                            android:src="@drawable/ic_verified"
                            app:tint="?attr/colorPrimary"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <!-- 标题 -->
                        <TextView
                            android:id="@+id/pro_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="@string/pro_rule_update_plan"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.01"
                            app:layout_constraintStart_toEndOf="@id/pro_icon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/pro_activate_info" />

                        <!-- 激活信息文本 -->
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/pro_activate_info"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:text=""
                            android:textColor="?attr/colorOnPrimaryContainer"
                            android:textSize="13sp"
                            android:lineSpacingExtra="2dp"
                            android:alpha="0.9"
                            app:layout_constraintStart_toEndOf="@id/pro_icon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/pro_title"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </net.ankio.auto.ui.components.BreathingGradientView>

            </com.google.android.material.card.MaterialCardView>

            <!-- 核心记账 -->
            <net.ankio.auto.ui.components.SettingItemView
                android:id="@+id/setting_core_recording"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:settingDesc="@string/setting_desc_core_recording"
                app:settingIcon="@drawable/ic_receipt_long"
                app:settingTitle="@string/setting_title_core_recording" />

            <!-- 数据与显示 -->
            <net.ankio.auto.ui.components.SettingItemView
                android:id="@+id/setting_data_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:settingDesc="@string/setting_desc_data_display"
                app:settingIcon="@drawable/ic_statistic"
                app:settingTitle="@string/setting_title_data_display" />

            <!-- 智能功能 -->
            <net.ankio.auto.ui.components.SettingItemView
                android:id="@+id/setting_smart_features"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:settingDesc="@string/setting_desc_smart_features"
                app:settingIcon="@drawable/ic_ai"
                app:settingTitle="@string/setting_title_smart_features" />

            <!-- 系统 -->
            <net.ankio.auto.ui.components.SettingItemView
                android:id="@+id/setting_system"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:settingDesc="@string/setting_desc_system"
                app:settingIcon="@drawable/ic_theme"
                app:settingTitle="@string/setting_title_system" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
