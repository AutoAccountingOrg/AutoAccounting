<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:liftOnScroll="true"
        app:liftOnScrollTargetViewId="@id/content_view">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:menu="@menu/setting_menu"
            style="@style/Widget.Material3.Toolbar"
            app:title="@string/title_setting" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding">

            <!-- 高级版信息卡片：Material You 渐变背景 + Tonal 分层 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/pro_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding"
                app:cardCornerRadius="@dimen/radius"
                app:cardElevation="0dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="0dp">

                <!-- 渐变背景层：BreathingGradientView 控制动态渐变 -->
                <net.ankio.auto.ui.components.BreathingGradientView
                    android:id="@+id/pro_gradient_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- 内容区域：激活状态由代码控制背景色 -->
                    <LinearLayout
                        android:id="@+id/pro_card_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="96dp"
                        android:orientation="vertical"
                        android:padding="@dimen/cardPadding2">

                        <!-- 头部：图标 + 文本区块 -->
                        <LinearLayout
                            android:id="@+id/pro_card_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <!-- 图标容器：Tonal 背景突出主视觉 -->
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/pro_icon_container"
                                android:layout_width="@dimen/image_size_large"
                                android:layout_height="@dimen/image_size_large"
                                android:clickable="false"
                                android:focusable="false"
                                app:cardBackgroundColor="?attr/colorSecondaryContainer"
                                app:cardCornerRadius="@dimen/radius_small"
                                app:cardElevation="0dp"
                                app:cardPreventCornerOverlap="true"
                                app:strokeWidth="0dp">

                                <!-- 主图标：动态控制 Tint 以贴合主题 -->
                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/pro_icon"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="@null"
                                    android:padding="@dimen/mini_padding"
                                    android:src="@drawable/ic_verified"
                                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small"
                                    app:tint="?attr/colorOnSecondaryContainer" />
                            </com.google.android.material.card.MaterialCardView>

                            <!-- 文本容器：标题 + 芯片 + 描述 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/padding"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <!-- 标题：Material3 标题样式 -->
                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/pro_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/pro_rule_update_plan"
                                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                    android:textColor="?attr/colorOnPrimaryContainer"
                                    android:textStyle="bold" />

                                <!-- 激活信息文本：展示激活状态说明 -->
                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/pro_activate_info"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:text=""
                                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                    android:textColor="?attr/colorOnPrimaryContainer" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- 底部留白：保证卡片呼吸感 -->
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="4dp" />
                    </LinearLayout>
                </net.ankio.auto.ui.components.BreathingGradientView>

            </com.google.android.material.card.MaterialCardView>

            <!-- 记账设置 -->
            <net.ankio.auto.ui.components.SettingItemView
                android:id="@+id/setting_recording"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:settingDesc="@string/setting_desc_recording"
                app:settingIcon="@drawable/ic_receipt_long"
                app:settingTitle="@string/setting_title_recording" />

            <!-- 交互设置 -->
            <net.ankio.auto.ui.components.SettingItemView
                android:id="@+id/setting_interaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:settingDesc="@string/setting_desc_interaction"
                app:settingIcon="@drawable/ic_notifications"
                app:settingTitle="@string/setting_title_interaction" />

            <!-- AI助理 -->
            <net.ankio.auto.ui.components.SettingItemView
                android:id="@+id/setting_ai_assistant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:settingDesc="@string/setting_desc_ai_assistant"
                app:settingIcon="@drawable/ic_ai"
                app:settingTitle="@string/setting_title_ai_assistant" />

            <!-- 数据管理 -->
            <net.ankio.auto.ui.components.SettingItemView
                android:id="@+id/setting_data_management"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:settingDesc="@string/setting_desc_data_management"
                app:settingIcon="@drawable/setting2_icon_backup"
                app:settingTitle="@string/setting_title_data_management" />

            <!-- 系统设置 -->
            <net.ankio.auto.ui.components.SettingItemView
                android:id="@+id/setting_system"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:settingDesc="@string/setting_desc_system"
                app:settingIcon="@drawable/setting2_icon_update"
                app:settingTitle="@string/setting_title_system" />

            <!-- 关于应用 -->
            <net.ankio.auto.ui.components.SettingItemView
                android:id="@+id/setting_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:settingDesc="@string/setting_desc_about"
                app:settingIcon="@drawable/ic_info"
                app:settingTitle="@string/setting_title_about" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
