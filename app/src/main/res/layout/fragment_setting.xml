<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:liftOnScroll="true"
        app:liftOnScrollTargetViewId="@id/content_view">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:menu="@menu/setting_menu"
            style="@style/Widget.Material3.Toolbar"
            app:title="@string/title_setting" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- 高级版信息卡片 - 优化版 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/pro_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:id="@+id/pro_card_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?colorPrimaryContainer"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp">

                    <!-- 图标容器 - 增加背景圆圈 -->
                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="?attr/colorSurface"
                        android:elevation="1dp">

                        <ImageView
                            android:id="@+id/pro_icon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_verified"
                            app:tint="?attr/colorPrimary" />
                    </FrameLayout>

                    <!-- 文字区域 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/pro_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pro_rule_update_plan"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.01" />

                        <TextView
                            android:id="@+id/pro_activate_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/pro_activate_click_to_enter"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            android:textSize="13sp"
                            android:alpha="0.75" />
                    </LinearLayout>

                    <!-- 箭头指示器 -->

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 核心记账 -->
            <net.ankio.auto.ui.components.SettingItemView
                android:id="@+id/setting_core_recording"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:settingDesc="@string/setting_desc_core_recording"
                app:settingIcon="@drawable/ic_receipt_long"
                app:settingTitle="@string/setting_title_core_recording" />

            <!-- 数据与显示 -->
            <net.ankio.auto.ui.components.SettingItemView
                android:id="@+id/setting_data_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:settingDesc="@string/setting_desc_data_display"
                app:settingIcon="@drawable/ic_statistic"
                app:settingTitle="@string/setting_title_data_display" />

            <!-- 智能功能 -->
            <net.ankio.auto.ui.components.SettingItemView
                android:id="@+id/setting_smart_features"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:settingDesc="@string/setting_desc_smart_features"
                app:settingIcon="@drawable/ic_ai"
                app:settingTitle="@string/setting_title_smart_features" />

            <!-- 系统 -->
            <net.ankio.auto.ui.components.SettingItemView
                android:id="@+id/setting_system"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:settingDesc="@string/setting_desc_system"
                app:settingIcon="@drawable/ic_theme"
                app:settingTitle="@string/setting_title_system" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
