<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/income_expense_card"
    style="@style/HomeCard">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- <com.google.android.material.imageview.ShapeableImageView
             android:id="@+id/ivBookCoverBg"
             android:layout_width="0dp"
             android:layout_height="0dp"
             android:scaleType="centerCrop"
             android:src="@drawable/default_book"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent" />-->


        <!-- 收入支出展示区域 -->
        <LinearLayout
            android:id="@+id/incomeExpenseLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/one_padding"
            android:layout_marginTop="@dimen/one_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomButtonsLayout">

            <!-- 收入区域 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/one_padding"
                android:gravity="center_vertical">

                <!-- 收入图标背景 -->
                <LinearLayout
                    android:id="@+id/llIncome"
                    android:layout_width="@dimen/image_size_large"
                    android:layout_height="@dimen/image_size_large"
                    android:background="@drawable/bg_success_icon"
                    android:gravity="center">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivIncomeIcon"
                        android:layout_width="@dimen/image_size_small"
                        android:layout_height="@dimen/image_size_small"
                        android:tint="@color/success" />

                </LinearLayout>

                <!-- 收入信息 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/one_padding"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/month_income"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvIncomeAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        tools:text="¥1,735.90"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/success"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- 支出区域 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/one_padding"
                android:gravity="center_vertical">

                <!-- 支出图标背景 -->
                <LinearLayout
                    android:id="@+id/llExpense"
                    android:layout_width="@dimen/image_size_large"
                    android:layout_height="@dimen/image_size_large"
                    android:background="@drawable/bg_danger_icon"
                    android:gravity="center">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivExpenseIcon"
                        android:layout_width="@dimen/image_size_small"
                        android:layout_height="@dimen/image_size_small"
                        android:tint="@color/danger" />

                </LinearLayout>

                <!-- 支出信息 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/one_padding"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/month_expense"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvExpenseAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        tools:text="¥8,000.00"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/danger"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- 底部按钮组 -->
        <LinearLayout
            android:id="@+id/bottomButtonsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="@dimen/padding"
            android:paddingBottom="@dimen/padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.button.MaterialButtonGroup
                android:id="@+id/monthlyButtonGroup"
                style="@style/Widget.Material3.MaterialButtonGroup.Connected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:selectionRequired="false"
                app:singleSelection="false">

                <!-- AI分析按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAiAnalysis"
                    style="?attr/materialButtonTonalStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_ai_analysis"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:icon="@drawable/ic_ai"
                    app:iconGravity="textStart"
                    app:iconPadding="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAnalysis"
                    style="?attr/materialButtonTonalStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_bill_statistics"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:icon="@drawable/ic_statistic"
                    app:iconGravity="textStart"
                    app:iconPadding="4dp" />
                <!-- 账单同步按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSync"
                    style="?attr/materialButtonTonalStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_bill_sync"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:icon="@drawable/ic_sync"
                    app:iconGravity="textStart"
                    app:iconPadding="4dp" />

            </com.google.android.material.button.MaterialButtonGroup>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
