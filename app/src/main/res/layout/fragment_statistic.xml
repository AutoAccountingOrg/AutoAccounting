<?xml version="1.0" encoding="utf-8"?>
<net.ankio.auto.ui.components.AdaptiveCoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        app:liftOnScroll="true"
        app:liftOnScrollTargetViewId="@id/content_view"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:tag="back_button"
            app:navigationIcon="@drawable/abc_ic_ab_back_material"
            app:title="@string/stat_title" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/filterCard"
                style="@style/HomeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/cardPadding2">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupPeriod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:selectionRequired="true"
                        app:singleLine="false"
                        app:chipSpacingHorizontal="6dp"
                        app:chipSpacingVertical="6dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipThisWeek"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/period_this_week"
                            android:textSize="13sp"
                            app:chipMinHeight="32dp"
                            app:chipMinTouchTargetSize="0dp"
                            app:chipStrokeWidth="0dp"
                            app:checkedIcon="@null" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipThisMonth"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/period_this_month"
                            android:textSize="13sp"
                            app:chipMinHeight="32dp"
                            app:chipMinTouchTargetSize="0dp"
                            app:chipStrokeWidth="0dp"
                            app:checkedIcon="@null" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipLastWeek"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/period_last_week"
                            android:textSize="13sp"
                            app:chipMinHeight="32dp"
                            app:chipMinTouchTargetSize="0dp"
                            app:chipStrokeWidth="0dp"
                            app:checkedIcon="@null" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipLast30Days"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/period_last_30_days"
                            android:textSize="13sp"
                            app:chipMinHeight="32dp"
                            app:chipMinTouchTargetSize="0dp"
                            app:chipStrokeWidth="0dp"
                            app:checkedIcon="@null" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipThisYear"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/period_this_year"
                            android:textSize="13sp"
                            app:chipMinHeight="32dp"
                            app:chipMinTouchTargetSize="0dp"
                            app:chipStrokeWidth="0dp"
                            app:checkedIcon="@null" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipLastYear"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/period_last_year"
                            android:textSize="13sp"
                            app:chipMinHeight="32dp"
                            app:chipMinTouchTargetSize="0dp"
                            app:chipStrokeWidth="0dp"
                            app:checkedIcon="@null" />


                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/summaryCard"
                style="@style/HomeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/cardPadding2">

                    <net.ankio.auto.ui.components.IconView
                        android:id="@+id/ivSummaryTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:iconSrc="@drawable/ic_summary"
                        app:text="@string/stat_summary"
                        app:textColor="?attr/colorOnSurface"
                        app:textSize="@dimen/font_size_title"
                        app:iconSpacing="@dimen/icon_text_spacing"
                        app:iconTintEnabled="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:id="@+id/ivExpenseIcon"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginEnd="4dp" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/tvExpenseLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/total_expense"
                                    android:textAppearance="@style/TextAppearance.Material3.BodySmall" />
                            </LinearLayout>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvTotalExpense"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                tools:text="- 1,234.56"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:id="@+id/ivIncomeIcon"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginEnd="4dp" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/tvIncomeLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/total_income"
                                    android:textAppearance="@style/TextAppearance.Material3.BodySmall" />
                            </LinearLayout>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvTotalIncome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                tools:text="+ 3,456.78"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_account_balance_wallet"
                                    android:tint="?attr/colorPrimary"
                                    android:layout_marginEnd="4dp" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/net_balance"
                                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                    android:textColor="?attr/colorPrimary" />
                            </LinearLayout>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvNetBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                tools:text="2,222.22"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                                android:textColor="?attr/colorPrimary"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_date_range"
                                    android:tint="?attr/colorOnSurfaceVariant"
                                    android:layout_marginEnd="4dp" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/daily_avg_expense"
                                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                    android:textColor="?attr/colorOnSurfaceVariant" />
                            </LinearLayout>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvDailyAvgExpense"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                tools:text="123.45/day"
                                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                                android:textColor="?attr/colorOnSurface"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/lineCard"
                style="@style/HomeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/cardPadding2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <net.ankio.auto.ui.components.IconView
                            android:id="@+id/ivLineTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:iconSrc="@drawable/ic_trend"
                            app:text="@string/stat_trend"
                            app:textColor="?attr/colorOnSurface"
                            app:textSize="@dimen/font_size_title"
                            app:iconSpacing="@dimen/icon_text_spacing"
                            app:iconTintEnabled="true" />

                        <!-- 图例 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <View
                                android:id="@+id/incomeIndicator"
                                android:layout_width="16dp"
                                android:layout_height="3dp"
                                android:background="@color/success" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="12dp"
                                android:text="@string/total_income"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall" />

                            <View
                                android:id="@+id/expenseIndicator"
                                android:layout_width="16dp"
                                android:layout_height="3dp"
                                android:background="@color/danger" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="@string/total_expense"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall" />

                        </LinearLayout>
                    </LinearLayout>

                    <net.ankio.auto.ui.components.LineChartView
                        android:id="@+id/lineChart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="12dp"
                        android:background="?attr/colorSurfaceContainerLow" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/categoryCard"
                style="@style/HomeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/cardPadding2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <net.ankio.auto.ui.components.IconView
                            android:id="@+id/ivCategoryTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:iconSrc="@drawable/ic_category_stats"
                            app:text="@string/stat_category"
                            app:textColor="?attr/colorOnSurface"
                            app:textSize="@dimen/font_size_title"
                            app:iconSpacing="@dimen/icon_text_spacing"
                            app:iconTintEnabled="true" />

                        <com.google.android.material.button.MaterialButtonToggleGroup
                            android:id="@+id/categoryToggleGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:singleSelection="true"
                            app:selectionRequired="true">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnExpenseCategory"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="支出"
                                android:textSize="12sp"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnIncomeCategory"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="收入"
                                android:textSize="12sp"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp" />

                        </com.google.android.material.button.MaterialButtonToggleGroup>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/categoryRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:nestedScrollingEnabled="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</net.ankio.auto.ui.components.AdaptiveCoordinatorLayout>


