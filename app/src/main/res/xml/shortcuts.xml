<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- OCR识别快捷方式 - 复用现有的FloatingWindowTriggerActivity -->
    <shortcut
        android:shortcutId="ocr_recognition"
        android:enabled="true"
        android:icon="@drawable/ic_ocr"
        android:shortcutShortLabel="@string/ocr_shortcut_short_label"
        android:shortcutLongLabel="@string/ocr_shortcut_long_label"
        android:shortcutDisabledMessage="@string/ocr_shortcut_disabled_message">
        <intent
            android:action="android.intent.action.MAIN"
            android:targetPackage="net.ankio.auto"
            android:targetClass="net.ankio.auto.ui.activity.FloatingWindowTriggerActivity">
            <extra
                android:name="intentType"
                android:value="OCR" />
            <extra
                android:name="manual"
                android:value="true" />
        </intent>
    </shortcut>
</shortcuts>

