<?xml version="1.0" encoding="utf-8"?><!-- 核心记账设置：自动记账与通知、弹窗交互 -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 自动记账与通知 -->
    <PreferenceCategory android:title="@string/setting_category_auto_record">
        <rikka.material.preference.MaterialSwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/setting_icon_auto"
            android:key="autoRecordBill"
            android:summary="@string/setting_auto_record_bill_summary"
            android:title="@string/setting_auto_record_bill" />

        <rikka.material.preference.MaterialSwitchPreference
            android:defaultValue="false"
            android:icon="@drawable/ic_sync"
            android:key="manualSync"
            android:summary="@string/setting_manual_sync_summary"
            android:title="@string/setting_manual_sync" />

        <rikka.material.preference.MaterialSwitchPreference
            android:defaultValue="false"
            android:icon="@drawable/setting_icon_repeat"
            android:key="autoGroup"
            android:summary="@string/setting_auto_group_summary"
            android:title="@string/setting_auto_group" />

        <rikka.material.preference.MaterialSwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/icon_delete"
            android:key="confirmDeleteBill"
            android:summary="@string/setting_confirm_delete_bill_summary"
            android:title="@string/setting_confirm_delete_bill" />
    </PreferenceCategory>

    <!-- 通知设置 -->
    <PreferenceCategory android:title="@string/setting_category_notification">
        <rikka.material.preference.MaterialSwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/ic_notifications"
            android:key="showSuccessPopup"
            android:summary="@string/setting_bill_auto_record_summary"
            android:title="@string/setting_bill_auto_record" />

        <rikka.material.preference.MaterialSwitchPreference
            android:defaultValue="false"
            android:icon="@drawable/ic_notifications"
            android:key="loadSuccess"
            android:summary="@string/setting_load_success_summary"
            android:title="@string/setting_load_success" />

        <rikka.material.preference.MaterialSwitchPreference
            android:defaultValue="false"
            android:icon="@drawable/ic_notifications"
            android:key="showDuplicatedPopup"
            android:summary="@string/setting_duplicated_summary"
            android:title="@string/setting_duplicated" />

        <rikka.material.preference.MaterialSwitchPreference
            android:defaultValue="false"
            android:icon="@drawable/setting_landscape_dnd"
            android:key="landscapeDnd"
            android:summary="@string/setting_landscape_dnd_summary"
            android:title="@string/setting_landscape_dnd" />
    </PreferenceCategory>

    <!-- 弹窗交互 -->
    <PreferenceCategory android:title="@string/setting_category_popup_interaction">
        <rikka.material.preference.MaterialSwitchPreference
            android:defaultValue="false"
            android:icon="@drawable/setting2_icon_round_theme"
            android:key="roundStyle"
            android:summary="@string/setting_round_style_summary"
            android:title="@string/setting_round_style" />

        <androidx.preference.Preference
            android:defaultValue="0"
            android:icon="@drawable/setting_icon_timeout"
            android:key="floatTimeoutOff"
            android:summary="%s"
            android:title="@string/setting_float_badge_timeout" />

        <rikka.preference.SimpleMenuPreference
            android:defaultValue="dismiss"
            android:entries="@array/float_click_texts"
            android:entryValues="@array/float_click_values"
            android:icon="@drawable/setting_icon_timeout"
            android:key="floatTimeoutAction"
            android:summary="%s"
            android:title="@string/setting_float_timeout_action" />

        <rikka.preference.SimpleMenuPreference
            android:defaultValue="right"
            android:entries="@array/float_position_texts"
            android:entryValues="@array/float_position_values"
            android:icon="@drawable/setting_icon_click"
            android:key="floatGravityPosition"
            android:summary="%s"
            android:title="@string/setting_float_badge_position" />

        <rikka.preference.SimpleMenuPreference
            android:defaultValue="edit"
            android:entries="@array/float_click_texts"
            android:entryValues="@array/float_click_values"
            android:icon="@drawable/setting_icon_click"
            android:key="floatClick"
            android:summary="%s"
            android:title="@string/setting_float_click" />

        <rikka.preference.SimpleMenuPreference
            android:defaultValue="dismiss"
            android:entries="@array/float_click_texts"
            android:entryValues="@array/float_click_values"
            android:icon="@drawable/setting_icon_long_click"
            android:key="floatLongClick"
            android:summary="%s"
            android:title="@string/setting_float_long_click" />
    </PreferenceCategory>

    <!-- OCR设置 -->
    <PreferenceCategory android:title="@string/setting_category_ocr">
        <rikka.material.preference.MaterialSwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/ic_ocr"
            android:key="ocrShowAnimation"
            android:summary="@string/setting_ocr_show_animation_summary"
            android:title="@string/setting_ocr_show_animation" />
    </PreferenceCategory>

</PreferenceScreen>

